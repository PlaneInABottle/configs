{
  "$schema": "https://opencode.ai/config.json",
  "theme": "synthwave84",
  "autoupdate": true,
  "default_agent": "plan",
  "instructions": [
    "./OPENCODE.md"
  ],
  "permission": {
    "doom_loop": "ask",
    "external_directory": "ask",
    "bash": {
      "git diff": "allow",
      "git log*": "allow",
      "git status": "allow",
      "git show*": "allow",
      "pytest*": "allow",
      "npm test*": "allow",
      "npm run build": "allow",
      "uv run*": "allow",
      "head*": "allow",
      "tail*": "allow",
      "cat*": "allow",
      "ls*": "allow",
      "tree*": "allow",
      "find*": "allow",
      "grep*": "allow",
      "echo*": "allow",
      "wc*": "allow",
      "pwd": "allow",
      "jq*": "allow",
      "du*": "allow",
      "df*": "allow",
      "ps*": "allow",
      "stat": "allow",
      "file": "allow",
      "which*": "allow",
      "whereis": "allow"
    }
  },
  "keybinds": {
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d"
  },
  "mcp": {
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp"
      ],
      "enabled": true,
      "environment": {}
    },
  }
}
