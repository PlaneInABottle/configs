{
  "$schema": "https://opencode.ai/config.json",
  "theme": "synthwave84",
  "autoupdate": true,
  "default_agent": "plan",
  "instructions": [
    "./OPENCODE.md"
  ],
  "permission": {
    "doom_loop": "ask",
    "external_directory": "ask",
    "bash": {
      "npm test*": "allow",
      "rm *": "ask",
      "*": "ask"
    },
    "edit": {
      "*.md": "allow",
      "*": "ask"
    }
  },
  "keybinds": {
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d"
  },
  "mcp": {
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp"
      ],
      "enabled": true,
      "environment": {}
    },
  }
}
