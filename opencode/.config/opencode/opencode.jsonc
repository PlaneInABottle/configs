{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [
    "opencode-pty"
  ],
  "theme": "synthwave84",
  "autoupdate": true,
  "default_agent": "plan",
  "instructions": [
    "./OPENCODE.md"
  ],
  "permission": {
    "doom_loop": "ask",
    "external_directory": "ask",
    "bash": {
      "*": "ask",
      "cat*": "allow",
      "cargo test*": "allow",
      "date*": "allow",
      "echo*": "allow",
      "file*": "allow",
      "find*": "allow",
      "git branch*": "allow",
      "git diff*": "allow",
      "git log*": "allow",
      "git remote*": "allow",
      "git show*": "allow",
      "git status*": "allow",
      "go test*": "allow",
      "grep*": "allow",
      "head*": "allow",
      "less*": "allow",
      "ls*": "allow",
      "make*": "allow",
      "more*": "allow",
      "npm run*": "allow",
      "npm test*": "allow",
      "bun run*": "allow",
      "bun test*": "allow",
      "pwd": "allow",
      "pytest*": "allow",
      "rg*": "allow",
      "tail*": "allow",
      "tree*": "allow",
      "type*": "allow",
      "uname*": "allow",
      "wc*": "allow",
      "which*": "allow",
      "whereis*": "allow"
    },
    "edit": {
      "*": "ask"
    },
    "read": "allow",
    "grep": "allow",
    "glob": "allow",
    "list": "allow",
    "lsp": "allow",
    "skill": "allow",
    "todowrite": "allow",
    "todoread": "allow",
    "webfetch": "allow",
    "websearch": "allow",
    "question": "allow",
    "sim-mcp_remove_blocks": "ask",
    "sim-mcp_remove_edge": "ask",
    "sim-mcp_remove_variable": "ask",
    "sim-mcp_delete_skill": "ask",
    "sim-mcp_replace_workflow_state": "ask",
    "sim-mcp_update_block_name": "ask",
    "sim-mcp_toggle_block_enabled": "ask",
    "sim-mcp_update_block_parent": "ask",
    "sim-mcp_update_subblock": "ask",
    "sim-mcp_update_subflow": "ask",
    "sim-mcp_update_skill": "ask",
    "sim-mcp_execute_workflow": "ask",
    "sim-mcp_upsert_custom_tools": "ask"
  },
  "keybinds": {
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d"
  },
  "mcp": {
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp",
        "--api-key",
        "{env:CONTEXT7_API_KEY}"
      ],
      "enabled": true,
      "environment": {}
    }
  }
}
