{
  "$schema": "https://opencode.ai/config.json",
  "theme": "synthwave84",
  "autoupdate": true,
  "default_agent": "plan",
  "instructions": [
    "./OPENCODE.md"
  ],
  "permission": {
    "doom_loop": "ask",
    "external_directory": "ask",
    "bash": {
      "*": "ask",
      "cat*": "allow",
      "cargo test*": "allow",
      "date*": "allow",
      "echo*": "allow",
      "file*": "allow",
      "find*": "allow",
      "git branch*": "allow",
      "git diff*": "allow",
      "git log*": "allow",
      "git remote*": "allow",
      "git show*": "allow",
      "git status*": "allow",
      "go test*": "allow",
      "grep*": "allow",
      "head*": "allow",
      "less*": "allow",
      "ls*": "allow",
      "make*": "allow",
      "more*": "allow",
      "npm run*": "allow",
      "npm test*": "allow",
      "pwd": "allow",
      "pytest*": "allow",
      "rg*": "allow",
      "tail*": "allow",
      "tree*": "allow",
      "type*": "allow",
      "uname*": "allow",
      "wc*": "allow",
      "which*": "allow",
      "whereis*": "allow"
    },
    "edit": {
      "*": "ask"
    },
    "read": "allow",
    "grep": "allow",
    "glob": "allow",
    "list": "allow",
    "lsp": "allow",
    "skill": "allow",
    "todowrite": "allow",
    "todoread": "allow",
    "webfetch": "allow",
    "websearch": "allow",
    "question": "allow"
  },
  "keybinds": {
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d"
  },
  "mcp": {
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp"
      ],
      "enabled": true,
      "environment": {}
    }
  }
}
