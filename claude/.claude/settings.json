{
  "permissions": {
    "deny": [
      "mcp__serena__replace_regex",
      "mcp__serena__replace_symbol_body"
    ]
  },
  "model": "opusplan",
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/metacognitive-enhancement.sh"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/enhanced-session-start.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "printf '\\033[34m%s\\033[0m [\\033[32m%s\\033[0m]' \"$(pwd)\" \"$(date +%H:%M:%S)\""
  }
}